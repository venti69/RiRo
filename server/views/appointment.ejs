<body>
    <%- include('./nav.ejs') %>

    <div class="appoint-main">
        <div class="flex-column">
            <div class="add-form">
                
            </div>
        </div>
    
        <div class="nyito">
            <div class="appointments-section">
                <h3 class="talalka">Találkozó (<%= appointments.length %>)</h3>
                <div class="appointment-list">
                    <% appointments.forEach(function(appointment) { %>
                        <div class="appointment-card">
                            <h4 class="faszom"><span>Páciens: </span><%= appointment.patientName %></h4>
                            <p><span>Orvos: </span><%= appointment.doctorName %></p>
                            <p><span>Időpont: </span><%= new Date(appointment.idopont).toLocaleDateString() %></p>
    
                            <div class="btn-container">
                                <form action="/appointments/edit/<%= appointment._id %>" method="GET">
                                    <button type="submit">Szerkesztés</button>
                                </form>
                                <br>
                                
                                <form action="/appointments/delete/<%= appointment._id %>" method="POST">
                                    <button style="background-color: #D9534F;" type="submit" onclick="return confirm('Biztosan törölni szeretnéd?');">Törlés</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>