<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
        <link
            rel="stylesheet"
            href="/css/stilus.css"
        />
        <title>Users</title>
        <!-- <link rel="stylesheet" href="/css/Doctors.css"> -->
    </head>
    <body>
        <%- include('./nav.ejs') %>

        <div class="main-doc-container">
            <div class="doctors-section">
                <h3>Orvosok</h3>
                <div class="doctor-list">
                    <% doctors.forEach((doctor) => { %>
                    <div class="doctor-card">
                        <h4>
                            <%= doctor.isEditMode ? 'Orvos szerkesztése' :
                            'Orvos felvétele' %>
                        </h4>
                        <h5>Név: <%= doctor.nev %></h5>
                        <p>Szakirány: <%= doctor.szak %></p>
                        <button
                            onclick="window.location.href='/api/hospital/egyedi/<%= doctor._id %>'"
                        >
                            Szerkesztés
                        </button>
                        <form
                            method="POST"
                            action="/doctors/delete/<%= doctor._id %>"
                            style="display: inline"
                        >
                            <button type="submit">Törlés</button>
                        </form>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </body>
</html>
