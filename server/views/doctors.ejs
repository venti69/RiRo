<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
        <!-- <link rel="stylesheet" href="/CSS/indexhatter.css"> -->
        <link rel="stylesheet" href="/CSS/stilus.css">

        <title>Doctors</title>
    </head>
    <body>
        <%- include('./nav.ejs') %>
        <div
        class="modal"
        id="modal-container"
        aria-hidden="true"
    ></div>
        <div class="main-doc-container">
            <div class="doctors-section">
                <h3>Orvosok</h3>
                <div class="doctor-list">
                    <% doctors.forEach((doctor) => { %>
                    <div class="doctor-card">
                        <h4>
                            <%= doctor.isEditMode ? '' :
                            'Orvos felvétele' %>
                        </h4>
                        <h5 style="color: aliceblue;">Név: <%= doctor.nev %></h5>
                        <p style="color: aliceblue;">Szakirány: <%= doctor.szak %></p>
                        <button
                                type="button"
                                class="btn btn-warning edit-button"
                                data-bs-toggle="modal"
                                data-bs-target="#editModal<%= doctor.id %>"
                                onClick="szerkesztes('<%= doctor.id %>','<%= doctor.nev %>', '<%= doctor.szak %>')"
                            >
                                Szerkesztés
                            </button>
                            <button
                            class="btn btn-danger delete-button"
                            onClick="torol('<%= doctor._id%>')"
                        >
                            Töröl
                        </button>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
        
        <script src="/js/orvos/orvosModal.js"></script>
        <script src="/js/orvos/torol.js"></script>
        <script src="/js/orvos/megnyit.js"></script>
    </body>
</html>
