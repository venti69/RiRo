<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
        <link
            rel="stylesheet"
            href="/CSS/stilus.css"
        />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="icon" type="image/x-icon" href="/BG/favicon.ico">

        <title>Páciensek</title>
    </head>
    <body>
        <%- include('./nav.ejs') %>
        <div
            class="modal"
            id="modal-container"
            aria-hidden="true"
        ></div>
        <div class="main-doc-container">
            <div class="doctors-section">
                <h3>Páciensek</h3>
                <div class="doctor-list">
                    <% patient.forEach(patient => { %>
                    <div class="doctor-card">
                        <h4><%= patient.name %> <br>(<%= patient.email %>)</h4>
                        <h5 style="color: aliceblue">
                            Név: <%= patient.name %>
                        </h5>
                        <p style="color: aliceblue">
                            Email cím: <%= patient.email %>
                        </p>

                        <!-- Gombok konténerben -->
                        <div class="button-container">
                            <button
                                type="button"
                                class="btn btn-warning edit-button"
                                data-bs-toggle="modal"
                                data-bs-target="#editModal<%= patient.id %>"
                                onClick="szerkesztes('<%= patient._id %>','<%= patient.name %>', '<%= patient.email %>', '<%= patient.phone %>', '<%= patient.gender %>', '<%= patient.address %>', '<%= patient.ssn %>','<%= patient.motherName %>','<%= patient.birthName %>','<%= patient.birthDate %>')"
                            >
                                Szerkesztés
                            </button>
                            <!-- Gomb a Részletek megnyitásához -->
                            <button
                            type="button"
                            class="btn btn-success details-button"
                            onClick="megnyit('<%= patient.name %>', '<%= patient.email %>', '<%= patient.id %>', '<%= patient.phone %>', '<%= patient.gender %>', '<%= patient.address %>', '<%= patient.ssn %>','<%= patient.motherName %>','<%= patient.birthName %>','<%= patient.birthDate %>')"
                            >
                            Részletek
                        </button>
                        <button
                            class="btn btn-danger delete-button"
                            onClick="torol('<%= patient.id%>')"
                        >
                            Töröl
                        </button>
                    </div>
                    </div>
                    <!-- Modal -->
                    <div
                        class="modal"
                        id="patientModal"
                        tabindex="-1"
                        aria-labelledby="patientModalLabel<%= patient.id %>"
                        aria-hidden="true"
                    >
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5
                                        class="modal-title"
                                        id="patientModalLabel<%= patient.id %>"
                                    >
                                        Alkalmazott Részletei
                                    </h5>
                                    <button
                                        type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"
                                    ></button>
                                </div>
                                <div class="modal-body">
                                    <p>
                                        <strong>Név:</strong>
                                        <span id="modalName"></span>
                                    </p>
                                    <p>
                                        <strong>Email:</strong>
                                        <span id="modalEmail"></span>
                                    </p>
                                    <p>
                                        <strong>Telefonszám:</strong>
                                        <span id="modalPhone"></span>
                                    </p>
                                    <p>
                                        <strong>Neme:</strong>
                                        <span id="modalGender"></span>
                                    </p>
                                    <p>
                                        <strong>Lakcím:</strong>
                                        <span id="modalAddress"></span>
                                    </p>
                                    <p>
                                        <strong>TAJ szám:</strong>
                                        <span id="modalSsn"></span>
                                    </p>
                                    <p>
                                        <strong>Anyja neve:</strong>
                                        <span id="modalMotherName"></span>
                                    </p>
                                    <p>
                                        <strong>Születés neve:</strong>
                                        <span id="modalBirthName"></span>
                                    </p>
                                    <p>
                                        <strong>Születés dátum:</strong>
                                        <span id="modalBirthDate"></span>
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <button
                                        type="button"
                                        class="btn btn-secondary"
                                        data-bs-dismiss="modal"
                                    >
                                        Mégsem
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <script src="/js/modal.js"></script>
        <script src="/js/torol.js"></script>
        <script src="/js/megnyit.js"></script>
    </body>
</html>
